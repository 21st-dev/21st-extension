{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension: vscode-extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build", "--filter", "21st-extension"],
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
